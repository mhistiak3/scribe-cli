    "node": ">=14.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.13.2",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "gray-matter": "^4.0.3",
